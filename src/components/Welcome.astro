<video class="bg-video" autoplay loop playsinline preload="auto">
  <source src="/src/assets/bg.webm" type="video/webm" />
</video>

<section class="hero">
  <h1>LoFi Tokyo</h1>
  <h2 id="element">- Chill beats for the City -</h2>
  <a
    href="https://www.youtube.com/channel/UCkK2B6D3imy6EnpqfrYm-5A"
    target="_blank">Play the Vibes!</a
  >
</section>

<style>
  .bg-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    border-bottom: 2px solid var(--bg-surface);
  }

  .hero {
    z-index: 1;
    position: relative;
    text-align: center;
  }

  h1 {
    font-family: "cooper-black-std", serif;
    color: var(--yellow);
    font-size: 110px;
    font-weight: bold;
    text-shadow:
      2px 2px 8px rgba(0, 0, 0, 0.15),
      1px 1px 3px rgba(0, 0, 0, 0.1);
  }

  h2 {
    font-family: "cooper-black-std", serif;
    color: var(--text-main);
    font-size: 30px;
    margin-top: -38px;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
  }

  a {
    display: inline-block;
    padding: 14px 28px;
    margin-top: 80px;
    font-size: 18px;
    font-weight: bold;
    color: var(--bg-desk);
    background-color: var(--green);
    border-radius: 12px;
    text-decoration: none;
    transition: 0.3s ease-in-out;
    position: relative;
    z-index: 1;
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.12);
  }

  a:hover {
    transform: translateY(-10px);
    box-shadow: 3px 3px 12px rgba(0, 0, 0, 0.18);
  }

  @media (max-width: 800px) {
    h1 {
      font-size: 90px;
    }

    h2 {
      font-size: 20px;
    }

    a:hover {
      transform: translateY(0px);
    }
  }

  @media (max-width: 1484px) {
    .bg-video {
      display: none;
    }
  }

  @media (min-width: 1484px) and (min-height: 1076px) {
    .flex {
      background-size: cover;
    }
  }
</style>
